{% import "_global/macros.html.twig" as macro %}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="es-ES" lang="es-ES">
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>.: {{ app.name }} {% block title %} {{ titulo }} {% endblock %}</title>
        <link rel="shortcut icon" href="favicon.ico" />

        <!-- Para que estÃ© disponible el path de la app en todos los java scripts -->
        <script type="text/javascript">var appPath = "{{app.path}}";</script>

        <link type="text/css" rel="stylesheet" href="{{app.path}}/css/tablet/menuazulgris.css" />
        <link type="text/css" rel="stylesheet" href="{{app.path}}/css/tablet/contenedor.css" />
        <link type="text/css" rel="stylesheet" href="{{app.path}}/css/tablet/formularios.css" />
        <link type="text/css" rel="stylesheet" href="{{app.path}}/css/tablet/notificaciones.css" />
        <link type="text/css" rel="stylesheet" href="{{app.path}}/css/tablet/jquery.ui.all.css" />
        <link type="text/css" rel="stylesheet" href="{{app.path}}/css/tablet/jquery.autocompletar.css" />
        <link type="text/css" rel="stylesheet" href="{{app.path}}/css/tablet/thickbox.css" media="screen" />

        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery-1.7.1.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.bgiframe-2.1.2.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.core.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.widget.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.datepicker.js"></script>
	<script type="text/javascript" src="{{app.path}}/js/jquery/i18n/jquery.ui.datepicker-es.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.tabs.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.mouse.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.draggable.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.position.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.resizable.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.dialog.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.autocomplete.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/jquery/jquery.ui.accordion.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/script.js"></script>
        <script type="text/javascript" src="{{app.path}}/js/thickbox.js"></script>

</head>
<body>

    <div id="pgWidth">

        <div id="Header">
        {% block header %}
            <div id="Head">
            {% if emp %}
            <div id="headleft">
                <a href="{{app.path}}/Index"><img src="{{app.path}}/docs/docs{{emp.IDEmpresa}}/images/logo.jpg" width="59" height="59" title="Inicio" alt="Logo Empresa"/></a>
            </div>
            {% endif %}

            <div id="headcenter">
                <form name="empresa" action="" method="post">
                <input name="controller" value="Index" type="hidden" />
		<input name="action" id="action1" value="" type="hidden" />
                <div style="float:left;">
                {{ macro.select('Empresa','Etiqueta','Empresa','Empresa',none,emp.IDEmpresa,user.Empresas,'Select',none,"getElementById('action1').value='Empresa'; submit();") }}
                </div>
                <div style="float:left;margin-left:20px;">
                {% if emp %}
                    {{ macro.select('Sucursal','Etiqueta','Sucursal','Sucursal',none,suc,user.Sucursales,'Select',none,"getElementById('action1').value='Sucursal'; submit();") }}
                {% endif %}
                </div>
                {% if tpv.IDTpv %}
                    <div style="float:left;margin-left:20px;">
                    Tpv: <h4>{{tpv.Nombre}}</h4>
                    </div>
                {% endif %}
                </form>
            </div>

            <div id="headright">
                <h4>{{user.Nombre}}</h4>
                <p>Ver. {{emp.IDVersion.Descripcion}}</p>
                <a href="/apps" class="logout">Salir</a>
            </div>
            </div>
        {% endblock %}
            <div style="clear: both;"></div>
        {% block menu %}
            {% include "_global/menuAzulGris.html.twig" with {'menu': menu} %}
        {% endblock %}

        </div>
    </div>

    <div id="Layout">
        {% block content %}
        {% endblock %}
    </div>

    <div id="notificacion"></div>

    <div id="Footer">
        <div id="footleft">
            <div class="debug">
            {% if values._debugMode %}
                <pre>{{values._debugValues}}</pre>
            {% endif %}
            </div>
        </div>

        <div id="footright">
            &copy; Powered by ALBATRONIC, SL 2012
        </div>
        <div style="clear:both;"></div>
    </div>
</body>
</html>