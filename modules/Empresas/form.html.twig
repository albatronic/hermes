{# Muestra los campos editables de la entidad        #}

<div class="Izquierda" style="width:49%;">
{{ macro.input('Razón Social','Etiqueta','text','Empresas[RazonSocial]','Empresas_RazonSocial',datos.RazonSocial,'50','CampoTextoLargo') }}
{{ macro.input('Cif','Etiqueta','text','Empresas[Cif]','Empresas_Cif',datos.Cif,'15','CampoCif') }}
{{ macro.input('Dirección','Etiqueta','text','Empresas[Direccion]','Empresas_Direccion',datos.Direccion,'50','CampoTextoLargo') }}
{{ macro.input('Población','Etiqueta','text','Empresas[Poblacion]','Empresas_Poblacion',datos.Poblacion,'30','CampoTextoLargo') }}
{{ macro.select('Provincia','Etiqueta','Empresas[IDProvincia]','Empresas_IDProvincia',none,datos.IDProvincia.IDProvincia,datos.IDProvincia.fetchAll('Provincia'),'Select')}}
{{ macro.input('Código Postal','Etiqueta','text','Empresas[CodigoPostal]','Empresas_CodigoPostal',datos.CodigoPostal,'10','CampoCPostal') }}
{{ macro.input('Teléfono','Etiqueta','text','Empresas[Telefono]','Empresas_Telefono',datos.Telefono,'30','CampoTextoLargo') }}
{{ macro.input('Fax','Etiqueta','text','Empresas[Fax]','Empresas_Fax',datos.Fax,'30','CampoTextoLargo') }}
{{ macro.input('EMail','Etiqueta','text','Empresas[EMail]','Empresas_EMail',datos.EMail,'50','CampoTextoLargo') }}
{{ macro.input('Web','Etiqueta','text','Empresas[Web]','Empresas_Web',datos.Web,'50','CampoTextoLargo') }}
{{ macro.cc('Cta. Corriente','Etiqueta','Clientes',datos.IDBanco,datos.IDOficina,datos.Digito,datos.Cuenta) }}
{{ macro.input('Sufijo Remesas','Etiqueta','text','Empresas[Sufijo]','Empresas_Sufijo',datos.Sufijo,'3','CampoTextoCorto') }}
{{ macro.input('Dígitos Cta Contable','Etiqueta','text','Empresas[DigitosCuentaContable]','Empresas_DigitosCuentaContable',datos.DigitosCuentaContable,'3','CampoUnidades') }}
{{ macro.input('Registro Mercantil','Etiqueta','text','Empresas[RegistroMercantil]','Empresas_RegistroMercantil',datos.RegistroMercantil,'255','CampoTextoLargo') }}
{{ macro.input('N. EORI','Etiqueta','text','Empresas[EORI]','Empresas_EORI',datos.EORI,'50','CampoTextoMedio') }}
{{ macro.select('Versión','Etiqueta','Empresas[IDVersion]','Empresas_IDVersion',none,datos.IDVersion.IDTipo,datos.IDVersion.fetchAll('Value'),'Select')}}
</div>

<div class="Derecha" style="width:49%;">

    {% if datos.IDEmpresa %}
            <div id="tabs" class="ui-tabs ui-widget ui-widget-content ui-corner-all">
                <ul class="ui-tabs-nav ui-helper-reset ui-helper-clearfix ui-widget-header ui-corner-all">
                    <li class="ui-state-default ui-corner-top ui-tabs-selected ui-state-active"><a href="#tabs-1">Sucursales</a></li>
                    <li class="ui-state-default ui-corner-top"><a href="#tabs-2">Almacenes</a></li>
                </ul>
                <div id="tabs-1" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
                    <iframe width="100%" height="330" scrolling="yes" style="border: 0px dotted grey;"
                            src="{{app.path}}/Sucursales/list/{{datos.IDEmpresa}}">
                    </iframe>
                </div>
                <div id="tabs-2" class="ui-tabs-panel ui-widget-content ui-corner-bottom ui-tabs-hide">
                    <iframe width="100%" height="300" scrolling="yes" style="border: 0px dotted grey;"
                            src="{{app.path}}/EmpresasAlmacenes/list/{{datos.IDEmpresa}}">
                    </iframe>
                </div>
            </div>
    {% endif %}

</div>