    <form name="manto_{{values.controller}}" id="manto_{{values.controller}}" action="" enctype="multipart/form-data" method="POST">
        <input name="controller" value="Articulos" type="hidden" />
        <input name="action" id="action_{{values.controller}}" value="edit" type="hidden" />
        {% include "_global/comandosSaveDelete.html.twig" %}

        <div class='Cuerpo'>
        <input name="Articulos[IDArticulo]" id="Articulos_IDArticulo" value="{{values.datos.IDArticulo}}" type="hidden" />
