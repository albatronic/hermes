{% extends 'CpanVariables/form.html.twig' %}

{% block template %}
<div id="tabs">
    <ul>
        <li><a href="#tabs-global">Global</a></li>
        <li><a href="#tabs-shop">Tienda Online</a></li>
        <li><a href="#tabs-visitas">Control Visitas</a></li>
        <li><a href="#tabs-varWeb">Visibilidad Var Web</a></li>          
    </ul>
        
    <div id="tabs-global" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        {{ macro.input({'caption':'[title] Título','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[title]','d_title',values.d.title,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[url] Url de la web con http://','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[url]','d_url',values.d.url,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[eMailWebMaster] EMail WebMaster','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[eMailWebMaster]','d_eMailWebMaster',values.d.eMailWebMaster,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[eMailSuperAdministrator] EMail SuperAdministrador','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[eMailSuperAdministrator]','d_eMailSuperAdministrator',values.d.eMailSuperAdministrator,'50','CampoTextoMedio','1') }}
        {{ macro.fecha({'caption':'[activeFrom] Vigente desde','visible':'1','varEnv':'0'},'EtiquetaLarga','d[activeFrom]','d_activeFrom',values.d.activeFrom,'19','datepicker') }}
        {{ macro.fecha({'caption':'[activeTo] Vigente hasta','visible':'1','varEnv':'0'},'EtiquetaLarga','d[activeTo]','d_activeTo',values.d.activeTo,'19','datepicker') }}
        {{ macro.input({'caption':'[maxLengthUrlsFriendly] Longitud máxima URLs y nombres amigables','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[maxLengthUrlsFriendly]','d_maxLengthUrlsFriendly',values.d.maxLengthUrlsFriendly,'3','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[allowTypes] Tipos de archivos permitidos (extensiones separadas por coma)','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[allowTypes]','d_allowTypes',values.d.allowTypes,'100','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[exportTypes] Formatos de exportación permitidos (extensiones separadas por coma)','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[exportTypes]','d_exportTypes',values.d.exportTypes,'100','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[numMaxPages] Núm. máximo de páginas','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[numMaxPages]','d_numMaxPages',values.d.numMaxPages,'6','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[numMaxDocuments] Núm. máx. Documentos','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[numMaxDocuments]','d_numMaxDocuments',values.d.numMaxDocuments,'6','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[numMaxGalery] Núm. máx. Imágenes Galeria','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[numMaxGalery]','d_numMaxGalery',values.d.numMaxGalery,'6','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[numMaxVideos] Núm. máx. Vídeos Galeria','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[numMaxVideos]','d_numMaxVideos',values.d.numMaxVideos,'6','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[numMaxAudios] Núm. máx. Audios Galeria','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[numMaxAudios]','d_numMaxAudios',values.d.numMaxAudios,'6','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[blockRobots] Bloquear Robots de busqueda','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','d[blockRobots]','d_blockRobots',values.d.blockRobots,'50','CampoTextoMedio','1') }}            
        {{ macro.input({'caption':'[log] Generar archivo log','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','d[log]','d_log',values.d.log,'50','CampoTextoMedio','1') }}            
    </div>
    
    <div id="tabs-shop" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        {{ macro.input({'caption':'[shop][url] Url de la tienda online con http://','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[shop][url]','d_shop_url',values.d.shop.url,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[shop][carruselPortada] Carrusel en portada','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','d[shop][carruselPortada]','d_shop_carruselPortada',values.d.shop.carruselPortada,'50','CampoTextoMedio','1') }}        
        {{ macro.input({'caption':'[shop][ivaIncluido] Iva incluido en los precios','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','d[shop][ivaIncluido]','d_shop_ivaIncluido',values.d.shop.ivaIncluido,'50','CampoTextoMedio','1') }}        
        {{ macro.input({'caption':'[shop][ivaIncluidoCarrito] Iva incluido en el carrito','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','d[shop][ivaIncluidoCarrito]','d_shop_ivaIncluidoCarrito',values.d.shop.ivaIncluidoCarrito,'50','CampoTextoMedio','1') }}        
        {{ macro.input({'caption':'[shop][cupones] Gestión de cupones','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','d[shop][cupones]','d_shop_cupones',values.d.shop.cupones,'50','CampoTextoMedio','1') }}        
        {{ macro.input({'caption':'[shop][boletines] Suscripción a boletines','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','d[shop][boletines]','d_shop_boletines',values.d.shop.boletines,'50','CampoTextoMedio','1') }}        
    </div>
        
    <div id="tabs-visitas" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        {{ macro.input({'caption':'[visitas][activo] Activo','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','d[visitas][activo]','d_visitas_activo',values.d.visitas.activo,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[visitas][ws] Webservice','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[visitas][ws]','d_visitas_ws',values.d.visitas.ws,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[visitas][frecuenciaHorasBorrado] Horas Frecuencia Borrado','visible':'1','varEnv':'0'},'EtiquetaLarga','text','d[visitas][frecuenciaHorasBorrado]','d_visitas_frecuenciaHorasBorrado',values.d.visitas.frecuenciaHorasBorrado,'50','CampoTextoMedio','1') }}        
    </div>
        
    {# CONTROL VISIBILIDAD VARIABLES WEB #}
    <div id="tabs-varWeb" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        <h5>Control de visibilidad de variables web</h5>
        <div id="acordeonVW" style="margin-top:10px;">
            <h3>Globales [showVarWeb][globales]</h3>
            <div>
                {% for nombre,valor in values.d.showVarWeb.globales %}
                    {{ macro.input({'caption':'['~nombre~']','visible':'1','updatable':'1','varEnv':'0'},'EtiquetaLarga','checkbox','d[showVarWeb][globales]['~nombre~']','d_showVarWeb_globales_'~nombre,valor)}}
                {% endfor %}            
            </div>

            <h3>Específicas [showVarWeb][especificas]</h3>
            <div>
            {% for nombre,valor in values.d.showVarWeb.especificas %}
                {{ macro.input({'caption':'['~nombre~']','visible':'1','updatable':'1','varEnv':'0'},'EtiquetaLarga','checkbox','d[showVarWeb][especificas]['~nombre~']','d_showVarWeb_especificas_'~nombre,valor)}}
            {% endfor %}
            </div>
        </div>
    </div>        
</div>
{% endblock %}