{% extends 'CpanVariables/form.html.twig' %}

{% block template %}
<div id="tabs">
    <ul>
        <li><a href="#tabs-global">Global</a></li>
        <li><a href="#tabs-shop">Tienda Online</a></li>
        <li><a href="#tabs-visitas">Control Visitas</a></li>
        <li><a href="#tabs-varWeb">Visibilidad Var Web</a></li>          
    </ul>
        
    <div id="tabs-global" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        {{ macro.input({'caption':'[title] Título','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[title]','datos_title',values.datos.title,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[url] Url de la web con http://','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[url]','datos_url',values.datos.url,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[eMailWebMaster] EMail WebMaster','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[eMailWebMaster]','datos_eMailWebMaster',values.datos.eMailWebMaster,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[eMailSuperAdministrator] EMail SuperAdministrador','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[eMailSuperAdministrator]','datos_eMailSuperAdministrator',values.datos.eMailSuperAdministrator,'50','CampoTextoMedio','1') }}
        {{ macro.fecha({'caption':'[activeFrom] Vigente desde','visible':'1','varEnv':'0'},'EtiquetaLarga','datos[activeFrom]','datos_activeFrom',values.datos.activeFrom,'19','datepicker') }}
        {{ macro.fecha({'caption':'[activeTo] Vigente hasta','visible':'1','varEnv':'0'},'EtiquetaLarga','datos[activeTo]','datos_activeTo',values.datos.activeTo,'19','datepicker') }}
        {{ macro.input({'caption':'[maxLengthUrlsFriendly] Longitud máxima URLs y nombres amigables','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[maxLengthUrlsFriendly]','datos_maxLengthUrlsFriendly',values.datos.maxLengthUrlsFriendly,'3','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[allowTypes] Tipos de archivos permitidos (extensiones separadas por coma)','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[allowTypes]','datos_allowTypes',values.datos.allowTypes,'100','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[numMaxPages] Núm. máximo de páginas','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[numMaxPages]','datos_numMaxPages',values.datos.numMaxPages,'6','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[numMaxDocuments] Núm. máx. Documentos','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[numMaxDocuments]','datos_numMaxDocuments',values.datos.numMaxDocuments,'6','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[numMaxGalery] Núm. máx. Imágenes Galeria','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[numMaxGalery]','datos_numMaxGalery',values.datos.numMaxGalery,'6','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[numMaxVideos] Núm. máx. Vídeos Galeria','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[numMaxVideos]','datos_numMaxVideos',values.datos.numMaxVideos,'6','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[numMaxAudios] Núm. máx. Audios Galeria','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[numMaxAudios]','datos_numMaxAudios',values.datos.numMaxAudios,'6','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[blockRobots] Bloquear Robots de busqueda','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','datos[blockRobots]','datos_blockRobots',values.datos.blockRobots,'50','CampoTextoMedio','1') }}            
        {{ macro.input({'caption':'[log] Generar archivo log','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','datos[log]','datos_log',values.datos.log,'50','CampoTextoMedio','1') }}            
    </div>
    
    <div id="tabs-shop" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        {{ macro.input({'caption':'[shop][url] Url de la tienda online con http://','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[shop][url]','datos_shop_url',values.datos.shop.url,'50','CampoTextoMedio','1') }}
    </div>
        
    <div id="tabs-visitas" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        {{ macro.input({'caption':'[visitas][activo] Activo','visible':'1','varEnv':'0'},'EtiquetaLarga','checkbox','datos[visitas][activo]','datos_visitas_activo',values.datos.visitas.activo,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[visitas][ws] Webservice','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[visitas][ws]','datos_visitas_ws',values.datos.visitas.ws,'50','CampoTextoMedio','1') }}
        {{ macro.input({'caption':'[visitas][frecuenciaHorasBorrado] Horas Frecuencia Borrado','visible':'1','varEnv':'0'},'EtiquetaLarga','text','datos[visitas][frecuenciaHorasBorrado]','datos_visitas_frecuenciaHorasBorrado',values.datos.visitas.frecuenciaHorasBorrado,'50','CampoTextoMedio','1') }}        
    </div>
        
    {# CONTROL VISIBILIDAD VARIABLES WEB #}
    <div id="tabs-varWeb" class="ui-tabs-panel ui-widget-content ui-corner-bottom">
        <h5>Control de visibilidad de variables web</h5>
        <div id="acordeonVW" style="margin-top:10px;">
            <h3>Globales [showVarWeb][globales]</h3>
            <div>
                {% for nombre,valor in values.datos.showVarWeb.globales %}
                    {{ macro.input({'caption':'['~nombre~']','visible':'1','updatable':'1','varEnv':'0'},'EtiquetaLarga','checkbox','datos[showVarWeb][globales]['~nombre~']','datos_showVarWeb_globales_'~nombre,valor)}}
                {% endfor %}            
            </div>

            <h3>Específicas [showVarWeb][especificas]</h3>
            <div>
            {% for nombre,valor in values.datos.showVarWeb.especificas %}
                {{ macro.input({'caption':'['~nombre~']','visible':'1','updatable':'1','varEnv':'0'},'EtiquetaLarga','checkbox','datos[showVarWeb][especificas]['~nombre~']','datos_showVarWeb_especificas_'~nombre,valor)}}
            {% endfor %}
            </div>
        </div>
    </div>        
</div>
{% endblock %}